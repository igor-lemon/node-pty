{
  "name": "node-pty",
  "description": "Fork pseudoterminals in Node.JS",
  "author": {
    "name": "Daniel Imms"
  },
  "version": "0.6.6",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "binding.gyp",
    "lib/",
    "scripts/",
    "src/",
    "deps/"
  ],
  "homepage": "https://github.com/Tyriar/node-pty",
  "bugs": {
    "url": "https://github.com/Tyriar/node-pty/issues"
  },
  "keywords": [
    "pty",
    "tty",
    "terminal",
    "pseudoterminal",
    "forkpty",
    "openpty",
    "ssh"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/igor-lemon/pty.js.git"
  },
  "bundledDependencies": [
    "node-pre-gyp"
  ],
  "binary": {
    "module_name": "node-pty",
    "module_path": "./build/{module_name}/v{version}/{configuration}/{node_abi}-{platform}-{arch}/",
    "remote_path": "./{module_name}/v{version}/{configuration}/",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "host": "github.com/igor-lemon/node-pty/releases/download"
  },
  "scripts": {
    "tsc": "tsc",
    "tslint": "tslint src/**/*.ts",
    "install": "prebuild-install || node-gyp rebuild",
    "rebuild": "prebuild --compile",
    "prebuild": "prebuild --all --strip --verbose",
    "postinstall": "node scripts/post-install.js",
    "test": "cross-env NODE_ENV=test mocha -R spec test"
  },
  "dependencies": {
    "nan": "2.5.0",
    "node-pre-gyp": "^0.6.36",
    "prebuild-install": "^2.1.2"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "@types/node": "^6.0.58",
    "cross-env": "^3.1.3",
    "mocha": "^3.1.2",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "node-pre-gyp-github": "^1.3.1",
    "prebuild": "^6.1.0"
  },
  "gypfile": true
}
